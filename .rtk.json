{
  "tagFormat": "v{version}",
  "resources": [
    {
      "path": "Makefile",
      "type": "makefile",
      "params": {
        "variable": "swaggy_c_version"
      }
    },
    {
      "path": "CHANGELOG.md",
      "type": "keep-a-changelog"
    },
    {
      "path": ".github/workflows/publish-workflow.yaml",
      "type": "yaml",
      "params": {
        "property": "jobs.build.steps.0.with.ref",
        "post_release_value": "main",
        "release_format": "v{version}"
      }
    }
  ]
}